<div id="<%= dom_id order %>">
  <p>
    <strong>Name:</strong>
    <%= order.name %>
  </p>

  <p>
    <strong>Address:</strong>
    <%= order.address %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= order.email %>
  </p>

  <p>
    <strong>Pay type:</strong>
    <%= order.pay_type %>
  </p>

  <p>
    <strong>Quantity:</strong>
    <% order_quantity = 0
       order.line_items.each do |t|
         order_quantity += t.quantity
       end %>
    <%= order_quantity %>
  </p>

  <p>
    <strong>Sum:</strong>
    <% order_sum = 0
       order.line_items.each do |t|
         order_sum += t.total_price
       end %>
    <%= order_sum %>
  </p>

</div>
