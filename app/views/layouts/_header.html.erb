<header class="bg-dark py-2">
  <div class="container px-2 px-lg-5 my-5">
    <div class="text-center text-white">
      <h1 class="display-8 fw-bolder"><%= t('.shop_style') %></h1>
      <p class="lead fw-normal text-white-50 mb-0"><%= t('.shop_site') %></p>
    </div>
  </div>
</header>

<script>
    function changeLocale(val) {
        if (val.options.selectedIndex === 0) {
            localStorage.setItem("locale", "en");
            return;
        }else if(val.options.selectedIndex === 1){
            localStorage.setItem("locale", "es");
            return;
        }
        localStorage.setItem("locale", "ua");
    }
</script>